@{
  Layout = "_Layout";
}

<h1>Band Tracker</h1>
<hr />
<h2>Bands:</h2>
@if (Model.Count != 0)
{
  <ol>
    @foreach (var band in Model)
    {
      <li><a href="/bands/@band.GetId()">@band.GetBandName() || @band.GetGenre()</a></li>
    }
  </ol>
}

<h4><a href="/bands/new">Add a new Band</a></h4>
<h4><a href="/">Return to Home</a></h4>
