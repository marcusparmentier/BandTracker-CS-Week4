@{
  Layout = "_Layout";
}

<h1>Band Tracker</h1>
<hr />

<div class="well">
  <h2>Bands:</h2>
  @if (Model.Count != 0)
  {
    <ul>
    @foreach (var band in Model)
    {
      <li><a href="/bands/@band.GetId()">@band.GetBandName() || @band.GetGenre()</a></li>
    }
    </ul>
  }
</div>

<div class="well">
  <h2><a href="/bands/new">Add a new Band</a></h2>
</div>

<div class="well">
  <h4><a href="/">Return to Home</a></h4>
</div>
